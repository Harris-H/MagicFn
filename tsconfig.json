{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "types": [
      "unplugin-icons/types/vue",
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src","src/**/*.d.ts"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
